<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <section class="message-form message-delete">
      <form action="" method="POST">
        <h1>Do you really want to delete this message ?</h1>
        <ul>
          <li>
            <div class="message-title">
              <h3><%= message.title %></h3>
            </div>
            <h4><%= message.message %></h4>
            <div class="name-and-date">
              <h4>By: <%= message.user.username %></h4>
              <h4><%= message.date %></h4>
            </div>
          </li>
        </ul>
        <input
          type="hidden"
          name="messageid"
          id="messageid"
          required
          value="<%= message._id %>"
        />
        <div class="form-buttons">
          <a class="cancel" href="/messages">Cancel</a>
          <button>Delete</button>
        </div>
      </form>
    </section>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
