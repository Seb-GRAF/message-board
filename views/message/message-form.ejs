<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <section class="message-form">
      <form action="" method="POST">
        <h1>Create a new message</h1>
        <div class="form-field">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            value="<%= locals.message_title ? `${locals.message_title}` : '' %>"
          />
          <% if (locals.errors) { %> <% locals.errors.forEach(error => { %> <%
          if (error.param === "title") { %>
          <p class="error wrong"><%= error.msg %></p>
          <% } %> <% }) %> <% } %>
        </div>

        <div class="form-field">
          <label for="message">Message</label>
          <textarea name="message" id="message">
<%= locals.message ? `${locals.message}` : '' %></textarea
          >
          <% if (locals.errors) { %> <% locals.errors.forEach(error => { %> <%
          if (error.param === "message") { %>
          <p class="error wrong"><%= error.msg %></p>
          <% } %> <% }) %> <% } %>
        </div>
        <div class="form-buttons">
          <a class="cancel" href="/messages">Cancel</a>
          <button>Submit</button>
        </div>
      </form>
    </section>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
